contract ClaimNFT is Ownable {

    IERC721 public nftContract =  IERC721(0x68087a38a8eEAf7c614b634eD50837de71069d47);

    struct UserAirdropData {
        uint[] nftIds;
        bool claimed;
    }
    mapping(address => UserAirdropData) public userInfo;

    bool public openToClaim;

    function setupAirdrop(address[] calldata accounts, uint[] calldata ids) public onlyOwner {
        for( uint256 i = 0; i < accounts.length; i++){
            userInfo[accounts[i]].nftIds.push(ids[i]);
        }
    }

    function setOpenToClaim(bool opened) public onlyOwner {
        openToClaim = opened;
    }
    
    function claimable(address account) public view returns(uint256[] memory) {
        return userInfo[account].nftIds;
    }

    function claim() public {
        require(openToClaim == true, "Not open to claim");
        require(userInfo[msg.sender].claimed == false, "You alreay claim");
        require(userInfo[msg.sender].nftIds.length > 0, "There isnt anything to claim");
        for(uint i = 0; i < userInfo[msg.sender].nftIds.length; i ++){
            //Check if owner still keep nft id
            if(nftContract.ownerOf(userInfo[msg.sender].nftIds[i]) == owner())
                nftContract.safeTransferFrom(owner(), msg.sender, userInfo[msg.sender].nftIds[i]);
        }
        userInfo[msg.sender].claimed = true;
    }
}