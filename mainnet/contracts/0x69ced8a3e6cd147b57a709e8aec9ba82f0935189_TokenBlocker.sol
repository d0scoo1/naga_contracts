contract TokenBlocker is Ownable {
    IERC20 Token;
    
    mapping(address => bool) public blocked;
    mapping(address => uint) public endLock;

    event Freeze (uint indexed _period);
    event Unfreeze ( address indexed recipient, uint indexed amount);
    event ContractBalance (uint indexed contarctBalance);

    function freeze(address _tokenAddress, uint _period) external payable onlyOwner returns (bool) {
        require(!blocked[_tokenAddress], 'blocking time has not yet passed');
        require(endLock[_tokenAddress] < block.timestamp, 'blocking time has not yet passed');

        endLock[_tokenAddress] = block.timestamp + _period;
        blocked[_tokenAddress] = true;
        
        emit Freeze(_period);
        return true;
    }

    function unfrize(address _tokenAddress, address payable recipient) external payable onlyOwner  returns (address, uint){
        if (endLock[_tokenAddress] <= block.timestamp) {
            blocked[_tokenAddress] = false;
        }

        require(!blocked[_tokenAddress], 'blocking time has not yet passed');
        uint lockedCoins = IERC20(_tokenAddress).balanceOf(address(this));
        IERC20(_tokenAddress).approve(address(this), lockedCoins);
        IERC20(_tokenAddress).transferFrom(address(this), recipient, lockedCoins);
        emit Unfreeze(recipient, lockedCoins);
        return (recipient, lockedCoins);
    }

    function balanceOf(address _tokenAddress) external returns (uint){
        emit ContractBalance(IERC20(_tokenAddress).balanceOf(address(this)));
        return (IERC20(_tokenAddress).balanceOf(address(this)));
    }
}