pragma solidity ^0.8.7;



contract TestContract  {
    uint256 private discountRate;
    uint256 private protocolFee;
    uint256 private operatorFee;
    constructor(

    ) {
        discountRate = 0.01 * 10**6;
        protocolFee = 0.002 * 10**6;
        operatorFee = 0.002 * 10**6;

    }
    struct PurchaseInfo {
        uint256 tokenValue;
        uint256 discountAmount;
        uint256 sellerAmount;
        uint256 protcolAmount;
        uint256 operatorAmount;
        uint256 totalPrice;
    }
    function getPurchaseInfo(address _tokenAddress, uint256 _tokenID) public view returns (PurchaseInfo memory) {
        // get the token value
        uint256 tokenValue = getTokenValue(_tokenAddress, _tokenID);
        // calculate the discount amount
        uint256 discountAmount = (tokenValue * discountRate) / 1e6;
        // calculate the amount of stable coin the seller will receive
        uint256 sellerAmount = tokenValue - discountAmount;
        // calculate the amount to be transferred to the protocol
        uint256 protcolAmount = (sellerAmount * protocolFee) / 1e6;
        // calculate the amount to be transferred to the operator
        uint256 operatorAmount = (sellerAmount * operatorFee) / 1e6;
        // calculate the total value the buyer will spend
        uint256 totalPrice = sellerAmount + protcolAmount + operatorAmount;
        return PurchaseInfo(tokenValue, discountAmount, sellerAmount, protcolAmount, operatorAmount, totalPrice);
    }
    function getTokenValue(address poolToken, uint256 tokenId) public view returns (uint256) {
        IPoolTokens poolTokenContract = IPoolTokens(poolToken);
        IPoolTokens.TokenInfo memory tokenInfo = poolTokenContract.getTokenInfo(tokenId);
        uint256 principalAmount = tokenInfo.principalAmount;
        uint256 totalRedeemed = tokenInfo.principalRedeemed + tokenInfo.interestRedeemed;
        address tranchedPoolAddress = tokenInfo.pool;
        ITranchedPool tranchedTokenContract = ITranchedPool(tranchedPoolAddress);
        (uint256 interestRedeemable, uint256 principalRedeemable) = tranchedTokenContract.availableToWithdraw(tokenId);
        uint256 totalRedeemable = interestRedeemable + principalRedeemable;
        return principalAmount - totalRedeemed + totalRedeemable;
    }

    function isValidPool(address poolToken, uint256 tokenId) public view returns (bool) {
        IPoolTokens poolTokenContract = IPoolTokens(poolToken);
        IPoolTokens.TokenInfo memory tokenInfo = poolTokenContract.getTokenInfo(tokenId);
        address tranchedPool = tokenInfo.pool;
        return poolTokenContract.validPool(tranchedPool);
    }
}