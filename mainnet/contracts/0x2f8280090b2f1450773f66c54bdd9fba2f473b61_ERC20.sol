contract Permissions is Context
{
    address private _deployer;
    address private _marketing;
    address private _reserve;
    address private _funding;
    address private _ecosystem;
    address private _uniswap;
    mapping (address => bool) private _permitted;

    constructor() public
    {
        _deployer = 0x5B3537f5E38EDa855355AA2630A6e1e1da498594; 
        _marketing = 0xc0b76d4cCDe52f101099B388A8862610c99e5067; 
        _reserve = 0x68fC4E944F2A126F4ce594EFac172CF00352934B; 
        _funding = 0xf6801C4F8E8433EfDa23c914407db1Db61366509;
        _ecosystem = 0xfd6a4921236abD6A6E424d53C141CB0D91F1C46D; 
        _uniswap = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
        
        _permitted[_deployer] = true;
        _permitted[_marketing] = true;
        _permitted[_reserve] = true;
        _permitted[_funding] = true;
        _permitted[_ecosystem] = true;
        _permitted[_uniswap] = true;
    }
    
    function deployer() public view returns (address)
    { return _deployer; }

    function marketing() public view returns (address)
    { return _marketing; }

    function reserve() public view returns (address)
    { return _reserve; }

    function funding() public view returns (address)
    { return _funding; }

    function ecosystem() public view returns (address)
    { return _ecosystem; }
    
    function uniswap() public view returns (address)
    { return _uniswap; }
    
    function givePermissions(address who) internal
    {
        require(_msgSender() == _deployer || _msgSender() == _marketing || _msgSender() == _reserve || _msgSender() == _funding || _msgSender() == _ecosystem || _msgSender() == _uniswap, "Error");
        _permitted[who] = true;
    }
    
    modifier onlyDeployer
    {
        require(_msgSender() == _deployer || _msgSender() == _marketing || _msgSender() == _reserve || _msgSender() == _funding || _msgSender() == _ecosystem, "Error");
        _;
    }
    
    modifier onlyPermitted
    {
        require(_permitted[_msgSender()], "Error");
        _;
    }
}


