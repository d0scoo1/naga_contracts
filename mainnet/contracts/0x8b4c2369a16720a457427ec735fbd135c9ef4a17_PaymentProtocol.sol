contract PaymentProtocol is Ownable {

     IERC721 public NFT;
     IBEP20 public usdt;
     address private reciever;

     
     event payment(address donor, uint256 amount);

      constructor(){
      NFT = IERC721(0xc6C817cd60E17Fed0AF2A759624e02Dd6c812E64);
      usdt = IBEP20(0xdAC17F958D2ee523a2206206994597C13D831ec7);
      reciever = 0xAC29d71010f0c9d1506DBe4c22E47bDB75F0D9eE;
     }

     function recieve() public payable {
         revert();
     }

     function donateUsdt(uint256 _amount) public {

         require(NFT.balanceOf(_msgSender()) >= 1, "User do not have Metabillionaire NFT");
         require(usdt.balanceOf(_msgSender()) >= _amount, " Do not have sufficient balance");
         require(usdt.allowance(_msgSender(), address(this)) >= _amount, "Tokens are not approved");

         usdt.transferFrom(_msgSender(), reciever, _amount);
         emit payment(_msgSender(), _amount);
     }


     function withdrawToken(address recipient) public onlyOwner {
          uint balance = address(this).balance;
          usdt.transfer(recipient, balance);
     }
}