pragma solidity ^0.8.0;

contract NFTExchange is Ownable, ReentrancyGuard {
    IERC721 public cryptoFish;

    mapping(uint256 => bool) public isBlocked;

    IERC721 public nft;
    address public pool;

    constructor(IERC721 _nft, address _pool) {
        nft = _nft;

        pool = _pool;
    }

    function setCryptoFish(IERC721 _cryptoFish) external onlyOwner {
        cryptoFish = _cryptoFish;
    }

    function setPool(address _pool) external onlyOwner {
        require(nft.isApprovedForAll(_pool, address(this)), "Do approve all first");
        pool = _pool;
    }

    function blockTokenId(uint256 tokenId, bool blocked) external onlyOwner {
        isBlocked[tokenId] = blocked;
    }

    function blockTokenIds(uint256[] calldata tokenIds, bool blocked) external onlyOwner {
        for (uint256 index = 0; index < tokenIds.length; index++) {
            isBlocked[tokenIds[index]] = blocked;
        }
    }

    /**
     * @notice swap tokenId of pool wiht userIds of msg.sender
     */
    function trade(uint256 tokenId, uint256[] calldata userTokenIds) external nonReentrant {
        require(!isBlocked[tokenId], "TokenId is invalid");

        if (address(cryptoFish) != address(0)) {
            require(cryptoFish.balanceOf(msg.sender) > 0 || userTokenIds.length >= 1, "Invalid");
        } else {
            require(userTokenIds.length == 2, "Invalid");
        }

        nft.safeTransferFrom(pool, msg.sender, tokenId);

        for (uint256 index = 0; index < userTokenIds.length; index++) {
            require(!isBlocked[userTokenIds[index]], "TokenId is invalid");
            nft.safeTransferFrom(msg.sender, pool, userTokenIds[index]);
        }
    }
}