    function _safeMint(
        address to,
        uint16[] memory tokenIds,
        bytes memory _data
    ) internal virtual {
        _mint(to, tokenIds);
        require(
            _checkOnERC721Received(address(0), to, tokenIds[0], _data),
            "ERC721: transfer to non ERC721Receiver implementer"
        );
    }
