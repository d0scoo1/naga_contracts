// File: contracts/BridgeContract.sol


pragma solidity 0.8.7;




contract BridgeContract is AccessControl, BridgeInterface {

    bytes32 public constant BRIDGEKEEPER_ROLE = keccak256("BRIDGEKEEPER_ROLE");
    bytes32 public constant MODERATOR_ROLE = keccak256("MODERATOR_ROLE");

    IERC20 private _tokenInstance;

    uint private _withdrawalTreshold;
    uint private _maxHotBalance;

    address private _coldAddress;

    constructor (address tokenAddress) {
        address defaultAdminAddress = 0x3c6D73215e1F8d4db2F13b8143FD40274c8ddB2b;
        _setupRole(DEFAULT_ADMIN_ROLE, defaultAdminAddress);
        address moderatorAddress = 0x3c6D73215e1F8d4db2F13b8143FD40274c8ddB2b;
        _setupRole(MODERATOR_ROLE, moderatorAddress);
        address bridgeKeeper_Address = 0x3c6D73215e1F8d4db2F13b8143FD40274c8ddB2b;
        _setupRole(BRIDGEKEEPER_ROLE, bridgeKeeper_Address);
        _tokenInstance = IERC20(tokenAddress);
        _withdrawalTreshold =  15 * 10**18;
        _maxHotBalance = 10 * 10**18;
        _coldAddress = 0x3c6D73215e1F8d4db2F13b8143FD40274c8ddB2b;
    }

    // Public
    function migrateOut(string memory to, uint amount) public override returns (bool) {
        _tokenInstance.transferFrom(msg.sender, address(this), amount);
        uint currentTokenBalance = _tokenInstance.balanceOf(address(this));
        if (currentTokenBalance > _withdrawalTreshold){
            _tokenInstance.transfer(_coldAddress, currentTokenBalance - _maxHotBalance);
        }
        emit MigrationOut(msg.sender, to, amount);
        return true;
    }
        
    // BridgeKeeper
    function migrateIn(string memory from, address to, uint amount) public override returns(bool) {
        require (hasRole(BRIDGEKEEPER_ROLE, msg.sender));
        _tokenInstance.transfer(to, amount);
        emit MigrationIn(from, to, amount);
        return true;
    }
    
    // Moderator
    function setTokenInstance(address tokenAddress) public override returns (bool) {
        require(hasRole(MODERATOR_ROLE, msg.sender));
        _tokenInstance = IERC20(tokenAddress);
        return true;
    }
    function setWithdrawalTreshold(uint withdrawalTreshold) public override returns (bool) {
        require(hasRole(MODERATOR_ROLE, msg.sender));
        require(withdrawalTreshold > _maxHotBalance, "WithdrawalTreshold must be bigger than maxHotBalance!");
        _withdrawalTreshold = withdrawalTreshold;
        return true;
    }
    function setMaxHotBalance(uint maxHotBalance) public override returns (bool) {
        require(hasRole(MODERATOR_ROLE, msg.sender));
        require(_withdrawalTreshold > maxHotBalance, "MaxHotBalance cannot be bigger than withdrawalTreshold!");
        _maxHotBalance = maxHotBalance;
        return true;
    }
    function setColdAddress(address coldAddress) public override returns (bool) {
        require(hasRole(MODERATOR_ROLE, msg.sender));
        _coldAddress = coldAddress;
        return true;
    }
    
    // Admin
    function salvageTokensFromContract(address tokenAddress, address to, uint amount) public override returns (bool){
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender));
        IERC20(tokenAddress).transfer(to, amount);
        return true;
    }
    function killContract() override public {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender));
        selfdestruct(payable(msg.sender));
    }

    // Public
    function getTokenAddress() public view override returns(address) {
        return address(_tokenInstance);
    }
    function getMaxHotBalance() public view override returns(uint) {
        return _maxHotBalance;
    }
    function getWithdrawalTreshold() public view override returns(uint) {
        return _withdrawalTreshold;
    }
    function getColdAddress() public view override returns(address) {
        return _coldAddress;
    }
}