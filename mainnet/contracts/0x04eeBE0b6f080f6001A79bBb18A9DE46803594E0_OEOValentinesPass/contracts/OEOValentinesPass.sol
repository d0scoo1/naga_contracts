contract OEOValentinesPass is ERC1155 {

    address public owner;
    bool isClaimPeriodActive = false;

    constructor() ERC1155("http://api.oneders.xyz/pass/0.json") {
        owner = msg.sender;
    }

    function claim() public {
        require(tx.origin == msg.sender, "OEO: Cannot mint from a contract");
        require(balanceOf(msg.sender, 0) == 0);
        _mint(msg.sender, 0, 1, "");
    }

    function setClaimPeriod(bool _active) public {
        require(msg.sender == owner, "OEO: Only owner");
        isClaimPeriodActive = _active;
    }
}