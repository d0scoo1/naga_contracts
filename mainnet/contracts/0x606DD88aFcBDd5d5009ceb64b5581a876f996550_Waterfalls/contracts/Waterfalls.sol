pragma solidity 0.8.15;
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {ERC721A} from "./ERC721A.sol";

contract Waterfalls is ERC721A, Ownable, ReentrancyGuard
{
    address public CRYPTO_CITIZEN_LIVE_MINT = 0xBAc93dB39A4d4ec2c679582c6519B8cba018Dc92;
    uint public TOTAL_TOKENS_MINTED = 0;
    uint public MAX_TOKENS = 100;
    uint public _Price = 999 ether;
    bool public _SaleIsActive = false;
    string public baseURI = "ipfs://QmVCXbuT28cb7EV4Su62YdHqXChLEsx6CFbVqzg62YHvFG/";

    /**
     * @dev Constructor 
     */
    constructor() ERC721A("Waterfalls", "Waterfalls") 
    {
        _transferOwnership(0xB96E81f80b3AEEf65CB6d0E280b15FD5DBE71937); // transfers ownership to BRT multisig
    }
    
    /****************** 
    *      Public     *
    *******************/

    /**
     * @dev Purchases NFT From Contract
     */
    function Purchase(uint Amount) payable external nonReentrant
    {
        require(msg.value == Amount * _Price && Amount > 0, "Incorrect Message Value");
        require(TOTAL_TOKENS_MINTED + Amount <= MAX_TOKENS, "Token Overflow");
        require(_SaleIsActive, "Sale Inactive");
        TOTAL_TOKENS_MINTED += Amount;
        _mint(msg.sender, Amount);
    }

    /********************
    *    onlyLiveMint   *
    *********************/

    /**
     * @dev Mints NFTs From CryptoCitizenLiveMint Contract
     */
    function _Mint(address Recipient, uint Amount) external onlyLiveMint returns (uint tokenID)
    {
        require(TOTAL_TOKENS_MINTED <= MAX_TOKENS, "Minted Out");
        TOTAL_TOKENS_MINTED += Amount;
        _mint(Recipient, Amount);
        return _totalMinted();
    }

    /****************** 
    *    OnlyOwner    *
    *******************/

    /**
     * @dev Withdraws Ether From Contract To Message Sender
     */
    function __Withdraw() external onlyOwner { payable(msg.sender).transfer(address(this).balance); }

    /**
     * @dev Withdraws Ether From Contract To Address
     */
    function __WithdrawToAddress(address payable recipient) external onlyOwner 
    {
        uint balance = address(this).balance;
        (bool success, ) = recipient.call{value: balance}("");
        require(success, "Unable to Withdraw, Recipient May Have Reverted");
    }

    /**
     * @dev Withdraws ERC20 From Contract To Address
     */
    function __WithdrawERC20ToAddress(address Recipient, address ContractAddress) external onlyOwner
    {
        IERC20 ERC20 = IERC20(ContractAddress);
        ERC20.transferFrom(address(this), Recipient, ERC20.balanceOf(address(this)));
    }

    /**
     * @dev Toggles Sale State Active / Inactive
     */
    function __FlipSaleState() external onlyOwner { _SaleIsActive = !_SaleIsActive; }

    /**
     * @dev Toggles Sale Price
     * note: `Price` Is Denoted In WEI. 1 ETH = 1000000000000000000 WEI
     */
    function __SetPrice(uint Price) external onlyOwner { _Price = Price; }

    /**
     * @dev Owner Mints `Amount` Of NFTs To `Recipient`
     */
    function __OwnerMint(address Recipient, uint Amount) external onlyOwner 
    {
        require(TOTAL_TOKENS_MINTED + Amount <= MAX_TOKENS, "Token Overflow"); 
        TOTAL_TOKENS_MINTED += Amount;
        _safeMint(Recipient, Amount); 
    }

    /**
     * @dev Sets Maximum Amount Of Tokens
     */
    function __SetMaxTokens(uint Amount) external onlyOwner { MAX_TOKENS = Amount; }

    /**
     * @dev Sets Base URI
     */
    function __setBaseURI(string calldata NewBaseURI) external onlyOwner { baseURI = NewBaseURI; }

    /****************** 
    *  INTERNAL VIEW  *
    ******************/

    /**
     * @dev Returns Base URI
     */
    function _baseURI() internal view virtual override returns (string memory) { return baseURI; }

    /****************** 
    *    BRT ADMIN    *
    ******************/

    /**
     * @dev Changes LiveMint Contract Address
     */
    function ___changeLiveMintAddress(address LiveMint) external onlyOwner { CRYPTO_CITIZEN_LIVE_MINT = LiveMint; }

    /****************** 
    *    MODIFIERS    *
    ******************/

    /**
     * @dev Requires Message Sender Is Valid BRT Minter
     */
    modifier onlyLiveMint
    {
        require(msg.sender == CRYPTO_CITIZEN_LIVE_MINT, "onlyLiveMint: Not Approved Minter");
        _;
    }
}
