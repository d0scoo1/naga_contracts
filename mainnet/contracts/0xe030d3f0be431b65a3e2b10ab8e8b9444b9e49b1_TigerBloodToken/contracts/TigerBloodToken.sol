/**
 * @title Tiger Blood Token
 * @author The Official Tiger Blood Token Team
 * 
 * @dev {ERC20} token, including:
 *
 *  - ability for holders to burn (destroy) their tokens
 *  - a minter role that allows for token minting (creation)
 *  - a fixed hardcoded max supply
 */

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TigerBloodToken is ERC20, ERC20Burnable, Ownable {
    
    /**
     * @dev Set the max supply
     */
    uint256 private _maxSupply = 2500000000 * 10 ** decimals();

    constructor() ERC20("Tiger Blood", "TBT") {

    }

    /**
     * @dev Returns max supply of the token.
     */
     function getMaxSupply() public view returns (uint256) {
         return _maxSupply;
     }

    /**
     * @dev Only the owner will be able to mint tokens and ensures
     * total supply doesn't go beyond the max supply
     */
     function mint(address to, uint256 amount) public onlyOwner {
         /**
          * @dev Total Spply + Mint Amount should not exceed Max Supply
          */
         require(totalSupply() + amount <= getMaxSupply(), "Tiger Blood Max Supply Exceeded");
         _mint(to, amount);
     }
}