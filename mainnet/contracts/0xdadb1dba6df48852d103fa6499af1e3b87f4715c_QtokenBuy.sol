contract QtokenBuy  {
    using SafeERC20 for IERC20;

address public immutable manager;

IPancakeRouter02 uniRouter;

address  public PANCAKESWAP_ROUTER_ADDRESS;

  constructor(address _routeraddress)  {
    manager = msg.sender;
    PANCAKESWAP_ROUTER_ADDRESS = _routeraddress;
    uniRouter = IPancakeRouter02(PANCAKESWAP_ROUTER_ADDRESS);
}

modifier OnlyManager() {
    require(msg.sender == manager);
    _;
}
function swapETHForToken(uint amountoutmin,address[] memory pair,uint deadline) external payable {
    
    uniRouter.swapExactETHForTokens{ value: msg.value }(
      amountoutmin,
      pair,
      address(this),
      deadline
    );
    // refund leftover ETH to user
    (bool success,) = msg.sender.call{ value: address(this).balance }("");
    require(success, "refund failed");
  }
  function withdrawAllFromToken(IERC20 token ) external OnlyManager {
    token.safeTransfer(manager, token.balanceOf(address(this)));
}
function withdrawWhatYouWantFromToken(address to, address _tokenAddress , uint256 _amount) external OnlyManager returns(bool) {
    IERC20(_tokenAddress).safeTransfer(to , _amount);
    return true;
}
function getBalanceOfToken(address _token) external OnlyManager view returns (uint256) {
  return IERC20(_token).balanceOf(address(this));
}


  receive() payable external {}
}