pragma solidity 0.8.11;








contract NyxGenesisRewards is Ownable, Pausable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    // Nyx Genesis NFT's
    IERC721Enumerable public immutable nyxGenesis;
    // Nyx token for rewards
    IERC20 public immutable nyxToken;
    // current distribution period
    uint256 public epoch;
    uint256 public epochCounter;
    // distribtion time schedule
    uint256 public period = 86400;

    // total rewards distributed to tier 1-2 NFTs
    uint256 public commonDistributedRewards;
    // tier 1-2 = 0.75% total distribution per distribution period
    uint256 commonShare = 75;
    // total tier 1-2 NFTs
    uint256 constant commonNumber = 105;
    // total rewards distributed to tier 3 NFTs
    uint256 public rareDistributedRewards;
    // tier 3 = 0.5% total distribution per distribution period
    uint256 rareShare = 50;
    // total tier 3 NFTs
    uint256 constant rareNumber = 39;
    // total rewards distributed to tier 4 NFTs
    uint256 public nyxDistributedRewards;
    // tier 4 = 0.5% total distribution per distribution period
    uint256 nyxShare = 50;
    // total tier 4 NFTs
    uint256 constant nyxNumber = 9;
    // total distributed rewards
    uint256 public totalDistributedRewards;
    // total initial deposit
    uint256 public totalContractBalance = 125e11 * 10**9;

    uint256 HUNDRED_PERCENT = 10**4;
    uint256 THRESHOLD_AMOUNT = 10**4 * 10**9;

    // active is set to true when contract is instantiated, or re-initiated.
    // it is set to false when there are no more rewards to be distributed
    bool public active;

    struct NFT {
        uint256 rewardDebt;
    }

    NFT[153] genesisNFTs;

    event Claim(
        address indexed _user,
        uint256 indexed _tokenId,
        uint256 _amount
    );
    event ClaimMultiple(
        address indexed _user,
        uint256[] indexed _tokenIds,
        uint256 _amount
    );
    event RewardsUpdated(address indexed _user, uint256 _amount);

    constructor(address _nyxg, address _nyxt) {
        nyxGenesis = IERC721Enumerable(_nyxg);
        nyxToken = IERC20(_nyxt);

        epoch = block.timestamp;
    }

    modifier onlyWithSufficientBalance() {
        require(
            nyxToken.balanceOf(address(this)) > THRESHOLD_AMOUNT,
            "Nyx balance too low"
        );
        _;
    }

    modifier whenActive() {
        require(active, "Contract is inactive");
        _;
    }

    modifier claimChecks(uint256 _tokenId) {
        require(nyxGenesis.ownerOf(_tokenId) == msg.sender, "Wrong caller");
        require(_tokenId < 153, "Invalid token ID");
        _;
    }

    function claim(uint256 _tokenId)
        external
        whenNotPaused
        nonReentrant
        onlyWithSufficientBalance
        claimChecks(_tokenId)
    {
        if (active) updateRewards();

        uint256 pendingNyx = getRewards(_tokenId);
        require(pendingNyx > 0, "No rewards");

        genesisNFTs[_tokenId].rewardDebt += pendingNyx;

        nyxToken.safeTransfer(msg.sender, pendingNyx);
        emit Claim(msg.sender, _tokenId, pendingNyx);
    }

    function getRewards(uint256 _tokenId)
        internal
        view
        returns (uint256 pendingNyx)
    {
        uint256 nftRewardDebt = genesisNFTs[_tokenId].rewardDebt;
        if (_tokenId < 105) {
            pendingNyx = commonDistributedRewards - nftRewardDebt;
        } 
        else if (_tokenId < 144) {
            pendingNyx = rareDistributedRewards - nftRewardDebt;
        } 
        else {
            pendingNyx = nyxDistributedRewards - nftRewardDebt;
        }
    }

    function claimMultiple(address _user)
        external
        whenNotPaused
        nonReentrant
        onlyWithSufficientBalance
    {
        require(_user == msg.sender, "wrong sender");
        if (active) updateRewards();

        uint256 pendingNyx = getPendingRewardsAndUpdateNFT(_user);
        require(pendingNyx > 0, "No rewards");

        nyxToken.safeTransfer(msg.sender, pendingNyx);
    }

    function getPendingRewardsAndUpdateNFT(address _user)
        internal
        returns (uint256 pendingNyx)
    {
        uint256 nftBalance = nyxGenesis.balanceOf(_user);

        for (uint256 i; i < nftBalance; i++) {
            uint256 nft = nyxGenesis.tokenOfOwnerByIndex(_user, i);

            uint256 _pendingNyx = getRewards(nft);

            genesisNFTs[nft].rewardDebt += _pendingNyx;

            pendingNyx += _pendingNyx;
        }
    }

    function pendingRewards(address _user) public view returns (uint256) {
        uint256 nftBalance = nyxGenesis.balanceOf(_user);
        uint256 pendingNyx;

        for (uint256 i; i < nftBalance; i++) {
            uint256 nft = nyxGenesis.tokenOfOwnerByIndex(_user, i);

            pendingNyx += getRewards(nft);
        }

        return pendingNyx;
    }

    function distribute() external onlyOwner onlyWithSufficientBalance {
        active = true;
        updateRewards();
    }

    function _updateRewards(
        uint256 _totalContractBalance,
        uint256 _totalDistributedRewards
    )
        internal
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        uint256 balance = _totalContractBalance - _totalDistributedRewards; // decimals ?

        // total allocation per week for each tier
        // allocation per user per week for each tier
        (uint256 cAllocAll, uint256 cAllocUser) = calculateCommonAllocation(
            balance
        );
        (uint256 rAllocAll, uint256 rAllocUser) = calculateRareAllocation(
            balance
        );
        (uint256 nAllocAll, uint256 nAllocUser) = calculateNyxAllocation(
            balance
        );

        uint256 allocAll = (cAllocAll + rAllocAll + nAllocAll);

        return (cAllocUser, rAllocUser, nAllocUser, allocAll);
    }

    function updateRewards() internal whenActive{
        uint256 _epoch = epoch;
        uint256 _period = period;

        if (block.timestamp > _epoch + _period) {
            uint256 _totalContractBalance = totalContractBalance;
            uint256 _thresholdAmount = THRESHOLD_AMOUNT;

            do {
                uint256 _totalDistributedRewards = totalDistributedRewards;

                uint256 _totalAvailableRewards = _totalContractBalance - _totalDistributedRewards - _thresholdAmount;

                uint256 allocAllChange;

                (
                    uint256 cAllocUser,
                    uint256 rAllocUser,
                    uint256 nAllocUser,
                    uint256 allocAll
                ) = _updateRewards(
                        _totalContractBalance,
                        _totalDistributedRewards
                    );
                
                uint256 tempAllocAllChange = allocAllChange + allocAll;

                if (tempAllocAllChange >= _totalAvailableRewards) {
                    active = false;
                    break;
                }

                commonDistributedRewards += cAllocUser;
                rareDistributedRewards += rAllocUser;
                nyxDistributedRewards += nAllocUser;
                totalDistributedRewards += allocAll;

                _epoch += _period;
                epochCounter += 1;
                
            } while (block.timestamp > _epoch + _period);


            epoch = _epoch;

            emit RewardsUpdated(msg.sender, totalDistributedRewards);
        }
    }

    function calculateCommonAllocation(uint256 _balance)
        public
        view
        returns (uint256, uint256)
    {
        unchecked {
            uint256 cAllocAll = (_balance * commonShare) / HUNDRED_PERCENT;
            uint256 cAllocUser = cAllocAll / commonNumber;

            return (cAllocAll, cAllocUser);
        }
    }

    function calculateRareAllocation(uint256 _balance)
        public
        view
        returns (uint256, uint256)
    {
        unchecked {
            uint256 rAllocAll = (_balance * rareShare) / HUNDRED_PERCENT;
            uint256 rAllocUser = rAllocAll / rareNumber;

            return (rAllocAll, rAllocUser);
        }
    }

    function calculateNyxAllocation(uint256 _balance)
        public
        view
        returns (uint256, uint256)
    {
        unchecked {
            uint256 nAllocAll = (_balance * nyxShare) / HUNDRED_PERCENT;
            uint256 nAllocUser = nAllocAll / nyxNumber;

            return (nAllocAll, nAllocUser);
        }
    }

    /**
     * ADMIN FUNCTIONS
     */

    function setPeriod(uint256 _period) external onlyOwner {
        require(_period > 0, "Period must be > 0");
        period = _period;
    }

    function pauseClaims() external onlyOwner {
        _pause();
    }

    function unpauseClaims() external onlyOwner {
        _unpause();
    }

    function withdrawToken(address _token) external onlyOwner {
        uint256 balance = IERC20(_token).balanceOf(address(this));
        require(balance > 0, "Amount 0");
        IERC20(_token).safeTransfer(msg.sender, balance);
    }

    function withdrawEth() external onlyOwner {
        uint256 balance = address(this).balance;
        require(balance > 0, "Amount 0");
        payable(msg.sender).transfer(balance);
    }

    function setTotalContractBalance(uint256 _amount) external onlyOwner {
        totalContractBalance = _amount;
    }
}